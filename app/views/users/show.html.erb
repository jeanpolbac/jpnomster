<div class="booyah-box">
  <div class="row">
    <div class="col-4" id='logo'>
      <%= image_tag 'user.png' %>
      <br /><br />
      <h2 style="font-size:4vw"><%= @user.email %></h2>
    </div>
    <div class="col-8 text-right" id='member'>
      <h3 style="font-size:3vw">Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <hr class="grey" align="right" width="33%"/>
      <h4 style="font-size:2vw"><%= @user.comments.count %> total comments</h4>
      <h4 style="font-size:2vw"><%= @user.comments.where(rating: '5_stars').count %> total reviews</h4>
    </div>
  </div>
  <div class="clear"></div>
 
</div>


<br /><br />
<h1 class="text-center">My Comments</h1>
<br /><br />
<div class="row">
  <% @user.comments.each do |comment| %>
    <div class="booyah-box col-10 offset-1">
        <h2><%= link_to comment.place.name, place_path(comment.place) %></h2>
        <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b>
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.email %></small>
        </blockquote>
    </div>
  <% end %>
</div>
<div class="clear"></div>

<br /><br />
<h1 class="text-center">My places</h1>
<br /><br />
<% @user.places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
<% end %>