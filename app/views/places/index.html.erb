<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'slider1.jpg', class: 'img-fluid' %>
      <div class="carousel-caption">
        <h3>There is always a coffee shop ready fullfill your caffeine cravings.</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider2.jpg', class: 'img-fluid' %>
      <div class="carousel-caption">
        <h3>Brunch is always a delicious meal.</h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
  
    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>
    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b>
          <% end %>
          <%= place.comments.last.message %>
          <div class= "index-last-comment-user">
            <%= place.comments.last.user.email %>
          </div>
        </blockquote>
      </div>
    <% end %>
    <% if place.photos.present? %>
      <div class="col-12">
        <blockquote>
          <img class="img-thumbnail" src="<%= place.photos.last.image %>">
          <div class= "index-last-img-user">
            <%= place.photos.last.user.email %>
          </div>
        </blockquote>
      </div>
    <% end %>  
  </div>
<% end %>

<div class="pagination">
  <%= will_paginate @places, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

